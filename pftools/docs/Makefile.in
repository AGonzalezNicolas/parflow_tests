#
#  Makefile for parflow tools.
# 

PROJECT       = parflow

PARFLOW	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = docs
VPATH	      =	@srcdir@
OBJECT        = ..

SUBDIRS       = usr_manual dev_manual amps_manual

include $(OBJECT)/config/Makefile.config

default: all

all:

doc:
	@for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done

#
# For cleaning
#
clean:	
	@for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done

veryclean: clean
	@for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done
	@rm -f Makefile

#
# For installing
#
install: 

doc_install: all
	@for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done

