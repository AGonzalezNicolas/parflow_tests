#
#  Makefile for parflow tools.
# 

PROJECT       = parflow

PARFLOW	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = docs/usr_manual
VPATH	      =	@srcdir@
OBJECT        = ../..
TEXLIBDIR     = @srcdir@/../lib/

include $(OBJECT)/config/Makefile.config

MANUAL = usr_manual
INSTALL_DIR = $(PARFLOW_INSTALL_DIR)/docs/usr_manual

ONLINE_OPTS =\
 -show_section_numbers\
 -bottom_navigation

LINK_FILES = do_online \
	     inputps.tex \
             html.sty \
             html.perl \
	     parflow.sty \
             parflow.perl \
             parflow.bib \
             IGWMC-logo-new.eps
FILES =\
 manual.tex\
 defs.tex\
 files.tex\
 intro.tex\
 models.tex \
 pfsystem.tex\
 start.tex \
 manual.bbl.tex \
 pftools.tex \
 bib.tex \
 fdl.tex

all:

doc:  manual.ps manual/manual.html

version.tex : $(PARFLOW)/../pfsimulator/parflow_lib/version.h
	echo "\def\PFVersion{"`awk -F "\"" '{print $$2}' $(PARFLOW)/../pfsimulator/parflow_lib/version.h`"}" > version.tex

manual.ps: manual.dvi
	@dvips -o manual.ps manual

manual/manual.html: manual.dvi
	@latex2html $(ONLINE_OPTS) manual.tex
	@$(TEXLIBDIR)/do_online manual

manual.dvi: Makefile $(FILES) version.tex
	@for i in ${LINK_FILES}; do     \
	   if [ ! -h $$i ] ; then    \
	     ln -s $(TEXLIBDIR)/$$i . ;\
	   fi \
	done 
	@for i in ${FILES}; do     \
	   if [ ! -h $$i ] ; then    \
	     ln -s $(SRCDIR)/$$i . ;\
	   fi \
	done 
	@latex manual
	@makeindex manual.idx
	@latex manual

install:

doc_install:
	@$(INSTALL) -d -m 755 $(INSTALL_DIR)/$(MANUAL)_html
	@for i in manual/*; do				        \
	   $(INSTALL) -c -m 644 $$i $(INSTALL_DIR)/$(MANUAL)_html; \
	done
	@$(INSTALL) -c -m 644 manual.ps $(INSTALL_DIR)/$(MANUAL).ps

clean:
	$(PARFLOW_CLEAN)

veryclean: clean
	@for i in ${LINK_FILES}; do     \
	   if [ -h $$i ] ; then    \
	    rm $$i ; \
	   fi \
	done 
	@/bin/rm -f  manual.ps version.tex
	@/bin/rm -fr manual
