if [ ! -f parflow/configure ]
then
	echo "Not in correct directory"
	exit 1 	
fi

if [ -z "$PARFLOW_DIR" ]
then
	echo "PARFLOW_DIR not set"
	exit 1
fi

CC=gcc
F90=gfortran
F77=gfortran

export CC F90 F77

#-----------------------------------------------------------------------------
# Make Parflow
#-----------------------------------------------------------------------------
DIR=parflow

(cd $DIR; ./configure \
                     --with-amps=mpi1 \
                     --prefix=$PARFLOW_DIR)

(cd $DIR; make -j 8 install)

#-----------------------------------------------------------------------------
# Make pftools
#-----------------------------------------------------------------------------

DIR=pftools

(cd $DIR; ./configure \
                     --with-amps=mpi1 \
		     --with-silo=/usr/gapps/silo/4.6.1/chaos_4_x86_64 \
                     --prefix=$PARFLOW_DIR)

(cd $DIR; make -j 8 install)

