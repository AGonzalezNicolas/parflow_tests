#=============================================================================
#
# Set up directory locations
#
#=============================================================================
if [ -z "$PARFLOW_SRC" ]
then
        PARFLOW_SRC=$PARFLOW_DIR
fi

PARFLOW_LIB=$PARFLOW_SRC/lib
if [ ! -d $PARFLOW_LIB ]
then
        mkdir $PARFLOW_LIB
fi

echo Making amps.$PF_ARCH.a
$PF_MAKE amps.$PF_ARCH.a
rm -f $PARFLOW_LIB/amps.$PF_ARCH.a
$PF_INSTALL $PARFLOW_SRC/amps/t3ds/amps.$PF_ARCH.a $PARFLOW_LIB/amps.$PF_ARCH.a

exit 0
