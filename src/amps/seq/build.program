#=============================================================================
#
# Set up directory locations
#
#=============================================================================
if [ -z "$PARFLOW_SRC" ]
then
        PARFLOW_SRC=$PARFLOW_DIR
fi

PARFLOW_LIB=$PARFLOW_SRC/lib
if [ ! -d $PARFLOW_LIB ]
then
        mkdir $PARFLOW_LIB
fi

PF_NODE_EXT=seq
export PF_NODE_EXT

#=============================================================================
#
# Determine the arch that we are compiling on
#
#=============================================================================
. $PARFLOW_SRC/config/getarch


#=============================================================================
#
# If on a new arch then clean everything
#
#=============================================================================
if [ "$PF_ARCH" != "$PF_OLD_ARCH" ]
then
	(cd $PARFLOW_SRC/parflow/; rm -f $PF_PROGRAM)
fi

#=============================================================================
#
# Set up directory locations
#
#=============================================================================
if [ -z "$PARFLOW_SRC" ]
then
        PARFLOW_SRC=$PARFLOW_DIR
fi

#=============================================================================
#
# Do the actual make 
#
#=============================================================================
if [ "$PF_ALL_FLAG" ]
then
	(cd $PARFLOW_SRC/amps/$PF_COMM/
	./build 
	cd $PARFLOW_SRC/kinsol/
	./build 
	cd $PARFLOW_SRC/parflow
	$PF_MAKE $PF_PROGRAM.seq
	)
fi


#=============================================================================
#
# Do the install
# 
#=============================================================================
if [ "$PF_INSTALL_FLAG" ] 
then

	rm -f $PARFLOW_BIN/$PF_PROGRAM
	$PF_INSTALL $PARFLOW_SRC/parflow/$PF_PROGRAM.seq $PARFLOW_BIN/$PF_PROGRAM
	
	(cd $PARFLOW_BIN
	SCRIPTS="bootmc getmc run freemc killmc peekmc clean batchmc"
	for i in $SCRIPTS
	do
	    rm -f $i
	    $PF_INSTALL $PARFLOW_SRC/amps/$PF_COMM/$i $i
	done
	)
fi

#=============================================================================
#
# Clean the local directory
#
#=============================================================================
if [ "$PF_CLEAN_FLAG" ]
then
	(cd $PARFLOW_SRC/parflow/; rm -f *$PF_NEXT.o)
	(cd $PARFLOW_SRC/amps/$PF_COMM; rm -f *$PF_NEXT.o)
	(cd $PARFLOW_SRC/amps/common; rm -f *$PF_NEXT.o)
	(cd $PARFLOW_SRC/kinsol; rm -f *$PF_NEXT.o)
fi

if [ "$PF_VERYCLEAN_FLAG" ]
then
	(cd $PARFLOW_SRC/parflow/; rm -f $PF_PROGRAM$PF_NEXT *$PF_NEXT.a)
	(cd $PARFLOW_SRC/amps/$PF_COMM; rm -f *$PF_NEXT.a)
	(cd $PARFLOW_SRC/amps/common; rm -f *$PF_NEXT.a)
	(cd $PARFLOW_SRC/kinsol; rm -f *$PF_NEXT.a)
	(cd $PARFLOW_LIB; rm -f *$PF_NEXT.a)
fi

